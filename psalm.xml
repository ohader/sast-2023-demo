<?xml version="1.0"?>
<psalm
    runTaintAnalysis="true"
    hoistConstants="true"
    hideExternalErrors="true"
    errorLevel="4"

    resolveFromConfigFile="true"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"

    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="templates"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <extraFiles>
        <directory name="vendor"/>
    </extraFiles>
    <fileExtensions>
        <extension name="php"/>
        <!-- <extension name="twig" checker="vendor/psalm/plugin-symfony/src/Twig/TemplateFileAnalyzer.php"/> -->
    </fileExtensions>
    <plugins>
        <!--
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin">
            <twigCachePath>/var/cache/twig</twigCachePath>
        </pluginClass>
        -->
        <!-- <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin"/> -->
    </plugins>
    <stubs>
        <file name="stubs/DoctrineDbal.stubphp" />
        <file name="stubs/SymfonyHttpFoundation.stubphp" />
    </stubs>
</psalm>
